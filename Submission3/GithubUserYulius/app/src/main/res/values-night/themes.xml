<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubUserYulius" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/DarkGrey</item>
        <item name="colorPrimaryVariant">@color/VeryDarkGrey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightOrange</item>
        <item name="colorSecondaryVariant">@color/darkOrange</item>
        <item name="colorOnSecondary">@color/VeryDarkGrey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="fab_background">
        <item name="android:backgroundTint">@color/lightGrey</item>
        <item name="backgroundTint">@color/lightGrey</item>
    </style>

    <style name="backgroundSecondary">
        <item name="android:background">@color/VeryDarkGrey</item>
    </style>

    <style name="iv_detailUser">
        <item name="android:background">@color/VeryDarkGrey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">270dp</item>
        <item name="android:contentDescription">@string/backgrounddetail</item>
    </style>

    <style name="hr_line">
        <item name="android:layout_height">1.5dp</item>
        <item name="android:background">@color/almostWhite</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="tab_layout">
        <item name="android:background">@color/VeryDarkGrey</item>
        <item name="tabTextColor">@color/almostWhite</item>
        <item name="tabIndicatorColor">@color/almostWhite</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>

    <style name="background">
        <item name="android:background">@color/DarkGrey</item>
    </style>

    <style name="color">
        <item name="android:textColor">@color/white</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="textDetailUser_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/lightGrey</item>
    </style>

    <style name="textDetailUser">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/almostWhite</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.DayNight.NoActionBar">

    </style>
</resources>